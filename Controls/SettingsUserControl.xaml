<UserControl x:Class="BetterClicker.Controls.SettingsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BetterClicker.Controls"
             mc:Ignorable="d"
             d:DesignHeight="516" d:DesignWidth="1016" Initialized="UserControl_Initialized" Background="#FFE8E8E8" BorderBrush="#FF444444">
    <Grid KeyDown="Grid_KeyDown" Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Header and Screenshot buttons -->
        <Label x:Name="settingsLabel" Content="Settings" FontSize="16" FontWeight="Bold" Grid.Row="0" Grid.Column="0"/>
        <StackPanel Grid.Row="0" Grid.Column="2" VerticalAlignment="Top">
            <Button x:Name="takeScreenshotsButton" Content="Take Screenshots" Width="120" Height="30" Margin="0,0,0,4" Click="takeScreenshotsButton_Click"/>
            <Button x:Name="openScreenshotFolderButton" Content="Open Folder" Width="120" Height="26" Click="openScreenshotFolderButton_Click"/>
        </StackPanel>

        <!-- Row 1: Inventory Settings (left) and Condition Settings (right) -->
        <Border BorderBrush="#FFCCCCCC" BorderThickness="1" Padding="10" Margin="0,0,8,8" Grid.Row="1" Grid.Column="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="Inventory" FontWeight="SemiBold" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>

                <Label Content="Left Top" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Padding="0,2"/>
                <TextBox x:Name="leftTopInventoryTextBox" Grid.Row="1" Grid.Column="1" Height="22" Margin="0,2"/>

                <Label Content="Right Bottom" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Padding="0,2"/>
                <TextBox x:Name="rightBottomInventoryTextBox" Grid.Row="2" Grid.Column="1" Height="22" Margin="0,2"/>

                <Label Content="Precision" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Padding="0,2"/>
                <TextBox x:Name="inventoryPrecisionModifierTextBox" Grid.Row="3" Grid.Column="1" Height="22" Margin="0,2" LostFocus="inventoryPrecisionModifierTextBox_LostFocus"/>

                <StackPanel Grid.Row="1" Grid.Column="2" Grid.RowSpan="2" Margin="8,0,0,0">
                    <Button x:Name="readInventoryButton" Content="Read" Width="50" Height="22" Margin="0,0,0,2" Click="readInventoryButton_Click"/>
                    <Button x:Name="showInventoryButton" Content="Show" Width="50" Height="22" Click="showInventoryButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border BorderBrush="#FFCCCCCC" BorderThickness="1" Padding="10" Margin="0,0,8,8" Grid.Row="1" Grid.Column="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="Condition" FontWeight="SemiBold" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>

                <Label Content="Left Top" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Padding="0,2"/>
                <TextBox x:Name="leftTopConditionTextBox" Grid.Row="1" Grid.Column="1" Height="22" Margin="0,2"/>

                <Label Content="Right Bottom" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Padding="0,2"/>
                <TextBox x:Name="rightBottomConditionTextBox" Grid.Row="2" Grid.Column="1" Height="22" Margin="0,2"/>

                <StackPanel Grid.Row="1" Grid.Column="2" Grid.RowSpan="2" Margin="8,0,0,0">
                    <Button x:Name="readConditionButton" Content="Read" Width="50" Height="22" Margin="0,0,0,2" Click="readConditionButton_Click"/>
                    <Button x:Name="showConditionButton" Content="Show" Width="50" Height="22" Click="showConditionButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Row 2: World Hop (left) and Other Settings (right) -->
        <Border BorderBrush="#FFCCCCCC" BorderThickness="1" Padding="10" Margin="0,0,8,8" Grid.Row="2" Grid.Column="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="World Hop" FontWeight="SemiBold" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>

                <Label Content="Left Top" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Padding="0,2"/>
                <TextBox x:Name="worldHopLeftTop_TextBox" Grid.Row="1" Grid.Column="1" Height="22" Margin="0,2"/>

                <Label Content="Right Bottom" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Padding="0,2"/>
                <TextBox x:Name="worldHopRightBottom_TextBox" Grid.Row="2" Grid.Column="1" Height="22" Margin="0,2"/>

                <Label Content="Count" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Padding="0,2"/>
                <TextBox x:Name="worldHopCountTextBox" Grid.Row="3" Grid.Column="1" Height="22" Margin="0,2" LostFocus="worldHopCountTextBox_LostFocus"/>

                <StackPanel Grid.Row="1" Grid.Column="2" Grid.RowSpan="2" Margin="8,0,0,0">
                    <Button x:Name="readWorldHopButton" Content="Read" Width="50" Height="22" Margin="0,0,0,2" Click="readWorldHopButton_Click"/>
                    <Button x:Name="showWorldHopButton" Content="Show" Width="50" Height="22" Click="showWorldHopButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border BorderBrush="#FFCCCCCC" BorderThickness="1" Padding="10" Margin="0,0,8,8" Grid.Row="2" Grid.Column="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="Other Settings" FontWeight="SemiBold" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>

                <Label Content="Double Click Delay" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Padding="0,2"/>
                <TextBox x:Name="doubleClickTextBox" Grid.Row="1" Grid.Column="1" Height="22" Margin="0,2" LostFocus="doubleClickTextBox_LostFocus"/>

                <Label Content="Center of Screen" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Padding="0,2"/>
                <TextBox x:Name="centerOfScreenTextBox" Grid.Row="2" Grid.Column="1" Height="22" Margin="0,2" LostFocus="inventoryPrecisionModifierTextBox_LostFocus"/>
                <StackPanel Grid.Row="2" Grid.Column="2" Orientation="Horizontal" Margin="8,0,0,0">
                    <Button x:Name="setCenterOfScreenButton" Content="Set" Width="40" Height="22" Margin="0,0,2,0" Click="setCenterOfScreenButton_Click"/>
                    <Button x:Name="showCenterButton" Content="Show" Width="40" Height="22" Click="showCenterButton_Click"/>
                </StackPanel>

                <Label Content="Min Blob Size" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Padding="0,2"/>
                <TextBox x:Name="minBlobSizeTextBox" Grid.Row="3" Grid.Column="1" Height="22" Margin="0,2" LostFocus="minBlobSizeTextBox_LostFocus"/>

                <Label Content="Agility Mode" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Padding="0,2"/>
                <CheckBox x:Name="agilityModeCheckBox" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" Click="agilityModeCheckBox_Changed"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
